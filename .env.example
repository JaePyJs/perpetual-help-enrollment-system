# School Enrollment System Environment Variables
# Copy this file to .env.development, .env.testing, or .env.production and fill in appropriate values

# Server Configuration
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/enrollment_system_dev

# Authentication
JWT_SECRET=change-this-to-a-secure-random-string
SESSION_SECRET=change-this-to-a-secure-random-string
COOKIE_SECRET=change-this-to-a-secure-random-string
REFRESH_TOKEN_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# File Storage
UPLOAD_DIR=./uploads

# Email Configuration
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@manila.uphsl.edu.ph
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_SECURE=false

# Optional: Email Services
SENDGRID_API_KEY=your-sendgrid-api-key
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Security
RATE_LIMIT_MAX=100
API_DOCS_ENABLED=true

# Logging
LOG_LEVEL=debug
LOG_PATH=./logs

# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
