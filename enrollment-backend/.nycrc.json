{
  "all": true,
  "check-coverage": true,
  "branches": 70,
  "lines": 80,
  "functions": 80,
  "statements": 80,
  "include": [
    "controllers/**/*.js",
    "models/**/*.js",
    "routes/**/*.js",
    "middleware/**/*.js",
    "utils/**/*.js"
  ],
  "exclude": [
    "tests/**",
    "coverage/**",
    "node_modules/**",
    "**/*.test.js",
    "**/*.spec.js"
  ],
  "reporter": [
    "lcov",
    "text",
    "text-summary"
  ],
  "report-dir": "./coverage",
  "cache": true,
  "sourceMap": true,
  "instrument": true
}
