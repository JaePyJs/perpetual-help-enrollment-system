# School Enrollment System Development Environment Variables

# Server Configuration
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/enrollment_system_dev

# Authentication
JWT_SECRET=dev-jwt-secret-change-this-in-production
SESSION_SECRET=dev-session-secret-change-this-in-production
COOKIE_SECRET=dev-cookie-secret-change-this-in-production
REFRESH_TOKEN_SECRET=dev-refresh-token-secret-change-this-in-production
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# File Storage
UPLOAD_DIR=./uploads

# Email Configuration (Using Mailtrap for development)
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@manila.uphsl.edu.ph
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=dev-smtp-user
SMTP_PASS=dev-smtp-password
SMTP_SECURE=false

# Security
RATE_LIMIT_MAX=1000
API_DOCS_ENABLED=true

# Logging
LOG_LEVEL=debug
LOG_PATH=./logs

# Monitoring (disabled in development)
SENTRY_DSN=
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
